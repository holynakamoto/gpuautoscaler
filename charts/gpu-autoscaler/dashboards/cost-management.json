{
  "dashboard": {
    "title": "GPU Cost Management",
    "tags": ["gpu", "cost", "phase4"],
    "timezone": "browser",
    "schemaVersion": 16,
    "version": 1,
    "refresh": "30s",
    "panels": [
      {
        "id": 1,
        "title": "Total GPU Cost",
        "type": "stat",
        "gridPos": {"h": 4, "w": 6, "x": 0, "y": 0},
        "targets": [
          {
            "expr": "gpu_autoscaler_total_cost_usd",
            "legendFormat": "Total Cost"
          }
        ],
        "options": {
          "graphMode": "area",
          "colorMode": "value",
          "textMode": "value_and_name"
        },
        "fieldConfig": {
          "defaults": {
            "unit": "currencyUSD",
            "decimals": 2
          }
        }
      },
      {
        "id": 2,
        "title": "Hourly Cost Rate",
        "type": "stat",
        "gridPos": {"h": 4, "w": 6, "x": 6, "y": 0},
        "targets": [
          {
            "expr": "gpu_autoscaler_hourly_cost_rate_usd",
            "legendFormat": "$/hour"
          }
        ],
        "options": {
          "graphMode": "area",
          "colorMode": "value"
        },
        "fieldConfig": {
          "defaults": {
            "unit": "currencyUSD",
            "decimals": 2
          }
        }
      },
      {
        "id": 3,
        "title": "Total Savings",
        "type": "stat",
        "gridPos": {"h": 4, "w": 6, "x": 12, "y": 0},
        "targets": [
          {
            "expr": "gpu_autoscaler_total_savings_usd",
            "legendFormat": "Savings"
          }
        ],
        "options": {
          "graphMode": "area",
          "colorMode": "value"
        },
        "fieldConfig": {
          "defaults": {
            "unit": "currencyUSD",
            "decimals": 2,
            "color": {"mode": "thresholds"},
            "thresholds": {
              "steps": [
                {"value": 0, "color": "red"},
                {"value": 1000, "color": "yellow"},
                {"value": 5000, "color": "green"}
              ]
            }
          }
        }
      },
      {
        "id": 4,
        "title": "Budget Status",
        "type": "gauge",
        "gridPos": {"h": 4, "w": 6, "x": 18, "y": 0},
        "targets": [
          {
            "expr": "gpu_autoscaler_budget_percentage",
            "legendFormat": "{{budget}}"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "percent",
            "min": 0,
            "max": 100,
            "thresholds": {
              "steps": [
                {"value": 0, "color": "green"},
                {"value": 50, "color": "yellow"},
                {"value": 80, "color": "orange"},
                {"value": 100, "color": "red"}
              ]
            }
          }
        }
      },
      {
        "id": 5,
        "title": "Cost Over Time",
        "type": "graph",
        "gridPos": {"h": 8, "w": 12, "x": 0, "y": 4},
        "targets": [
          {
            "expr": "rate(gpu_autoscaler_total_cost_usd[5m]) * 3600",
            "legendFormat": "Cost Rate ($/hour)"
          }
        ],
        "yaxes": [
          {
            "format": "currencyUSD",
            "label": "Cost"
          },
          {
            "format": "short",
            "show": false
          }
        ],
        "xaxis": {
          "mode": "time"
        }
      },
      {
        "id": 6,
        "title": "Cost by Namespace",
        "type": "piechart",
        "gridPos": {"h": 8, "w": 12, "x": 12, "y": 4},
        "targets": [
          {
            "expr": "sum by (namespace) (gpu_autoscaler_pod_cost_usd)",
            "legendFormat": "{{namespace}}"
          }
        ],
        "options": {
          "legend": {
            "displayMode": "table",
            "placement": "right",
            "values": ["value", "percent"]
          },
          "pieType": "donut"
        },
        "fieldConfig": {
          "defaults": {
            "unit": "currencyUSD",
            "decimals": 2
          }
        }
      },
      {
        "id": 7,
        "title": "Cost by GPU Type",
        "type": "bargauge",
        "gridPos": {"h": 8, "w": 12, "x": 0, "y": 12},
        "targets": [
          {
            "expr": "sum by (gpu_type) (gpu_autoscaler_pod_cost_usd)",
            "legendFormat": "{{gpu_type}}"
          }
        ],
        "options": {
          "orientation": "horizontal",
          "displayMode": "gradient"
        },
        "fieldConfig": {
          "defaults": {
            "unit": "currencyUSD",
            "decimals": 2
          }
        }
      },
      {
        "id": 8,
        "title": "Cost by Capacity Type (Spot vs On-Demand)",
        "type": "piechart",
        "gridPos": {"h": 8, "w": 12, "x": 12, "y": 12},
        "targets": [
          {
            "expr": "sum by (capacity_type) (gpu_autoscaler_pod_cost_usd)",
            "legendFormat": "{{capacity_type}}"
          }
        ],
        "options": {
          "legend": {
            "displayMode": "table",
            "placement": "bottom",
            "values": ["value", "percent"]
          },
          "pieType": "pie"
        },
        "fieldConfig": {
          "defaults": {
            "unit": "currencyUSD",
            "decimals": 2
          }
        }
      },
      {
        "id": 9,
        "title": "Top 10 Most Expensive Pods",
        "type": "table",
        "gridPos": {"h": 8, "w": 24, "x": 0, "y": 20},
        "targets": [
          {
            "expr": "topk(10, gpu_autoscaler_pod_cost_usd)",
            "format": "table",
            "instant": true
          }
        ],
        "options": {
          "showHeader": true,
          "sortBy": [
            {
              "displayName": "Value",
              "desc": true
            }
          ]
        },
        "fieldConfig": {
          "overrides": [
            {
              "matcher": {"id": "byName", "options": "Value"},
              "properties": [
                {
                  "id": "unit",
                  "value": "currencyUSD"
                },
                {
                  "id": "decimals",
                  "value": 2
                },
                {
                  "id": "custom.displayName",
                  "value": "Cost"
                }
              ]
            }
          ]
        }
      },
      {
        "id": 10,
        "title": "Savings Breakdown",
        "type": "bargauge",
        "gridPos": {"h": 8, "w": 12, "x": 0, "y": 28},
        "targets": [
          {
            "expr": "gpu_autoscaler_spot_savings_usd",
            "legendFormat": "Spot Instances"
          },
          {
            "expr": "gpu_autoscaler_sharing_savings_usd",
            "legendFormat": "GPU Sharing"
          },
          {
            "expr": "gpu_autoscaler_autoscaling_savings_usd",
            "legendFormat": "Autoscaling"
          },
          {
            "expr": "gpu_autoscaler_waste_savings_usd",
            "legendFormat": "Waste Elimination"
          }
        ],
        "options": {
          "orientation": "horizontal",
          "displayMode": "gradient",
          "showUnfilled": true
        },
        "fieldConfig": {
          "defaults": {
            "unit": "currencyUSD",
            "decimals": 2,
            "color": {"mode": "palette-classic"}
          }
        }
      },
      {
        "id": 11,
        "title": "Monthly Cost Projection",
        "type": "stat",
        "gridPos": {"h": 8, "w": 12, "x": 12, "y": 28},
        "targets": [
          {
            "expr": "gpu_autoscaler_hourly_cost_rate_usd * 730",
            "legendFormat": "Projected Monthly"
          }
        ],
        "options": {
          "graphMode": "area",
          "colorMode": "value",
          "textMode": "value_and_name",
          "orientation": "auto"
        },
        "fieldConfig": {
          "defaults": {
            "unit": "currencyUSD",
            "decimals": 2,
            "color": {"mode": "thresholds"},
            "thresholds": {
              "steps": [
                {"value": 0, "color": "green"},
                {"value": 10000, "color": "yellow"},
                {"value": 50000, "color": "orange"},
                {"value": 100000, "color": "red"}
              ]
            }
          }
        }
      }
    ]
  }
}
